proxy_cache_path /var/cache/nginx/ts_cache
                 use_temp_path=off
                 levels=1:2
                 keys_zone=ts_cache:100m
                 max_size=1g
                 inactive=1y;

map $http_origin $allow_origin {
  default "*";
  "${ALLOW_ORIGIN}" "$http_origin";
}

map $request_method $cors_method {
  default "allowed";
  "OPTIONS" "preflight";
}

map $cors_method $cors_max_age {
  default "";
  "preflight" 3600;
}

map $cors_method $cors_allow_methods {
  default "";
  "preflight" "GET, POST, OPTIONS";
}

map $cors_method $cors_allow_headers {
  default "";
  "preflight" "Authorization,Content-Type,Accept,Origin,User-Agent,DNT,Cache-Control,X-Mx-ReqToken,Keep-Alive,X-Requested-With,If-Modified-Since";
}

map $cors_method $cors_content_length {
  default $initial_content_length;
  "preflight" 0;
}

map $cors_method $cors_content_type {
  default $initial_content_type;
  "preflight" "application/json; charset=utf-8";
}

server {
    listen 80 default_server;
    server_name _;
    more_set_headers "Access-Control-Allow-Origin: $allow_origin";
    more_set_headers "Access-Control-Allow-Credentials: true";
    more_set_headers "Access-Control-Max-Age: $cors_max_age";
    more_set_headers "Access-Control-Allow-Methods: $cors_allow_methods";
    more_set_headers "Access-Control-Allow-Headers: $cors_allow_headers";

    set $initial_content_length $sent_http_content_length;
    # more_set_headers "Content-Length: ";
    more_set_headers "Content-Length: $cors_content_length";

    set $initial_content_type $sent_http_content_type;
    # more_set_headers "Content-Type: ";
    more_set_headers "Content-Type: $cors_content_type";

    if ($request_method = 'OPTIONS') {
      return 204;
    }

    location / {
      more_set_headers "Content: application/json";
      return 200 "{\"status\": \"200\", \"message\": \"ok\"}";
    }

    location /run.cgi {
        auth_basic                    "noske-corpsum";
        auth_basic_user_file          "/etc/nginx/auth";
        proxy_pass                    "${PROXY_FOR}/run.cgi";
        add_header                    X-Cache-Status    $upstream_cache_status;
        proxy_cache                   ts_cache;
        proxy_cache_valid             200 302 1y;
        proxy_cache_valid             404 1m;
        proxy_cache_methods           GET HEAD POST;
        proxy_ignore_headers          Cache-Control;
        proxy_cache_background_update on;
        proxy_cache_lock              on;
        proxy_cache_key               "$remote_user$scheme$proxy_host$uri$is_args$args$request_body";
        proxy_read_timeout            600s;
        proxy_ignore_headers          Set-Cookie;
        proxy_set_header              x-username $remote_user;
        proxy_set_header              remote-user $remote_user;        
    }

    location /search {
        auth_basic                    "noske-corpsum";
        auth_basic_user_file          "/etc/nginx/auth";
        proxy_pass                    "${PROXY_FOR}/run.cgi";
        add_header                    X-Cache-Status    $upstream_cache_status;
        proxy_cache                   ts_cache;
        proxy_cache_valid             200 302 1y;
        proxy_cache_valid             404 1m;
        proxy_cache_methods           GET HEAD POST;
        proxy_ignore_headers          Cache-Control;
        proxy_cache_background_update on;
        proxy_cache_lock              on;
        proxy_cache_key               "$remote_user$scheme$proxy_host$uri$is_args$args$request_body";
        proxy_read_timeout            600s;
        proxy_ignore_headers          Set-Cookie;
        proxy_set_header              x-username $remote_user;
        proxy_set_header              remote-user $remote_user;       
    }

    location /ca/api {
        auth_basic                    "noske-corpsum";
        auth_basic_user_file          "/etc/nginx/auth";
        proxy_pass                    "${PROXY_FOR}/run.cgi";
        add_header                    X-Cache-Status    $upstream_cache_status;
        proxy_cache                   ts_cache;
        proxy_cache_valid             200 302 1y;
        proxy_cache_valid             404 1m;
        proxy_cache_methods           GET HEAD POST;
        proxy_ignore_headers          Cache-Control;
        proxy_cache_background_update on;
        proxy_cache_lock              on;
        proxy_cache_key               "$remote_user$scheme$proxy_host$uri$is_args$args$request_body";
        proxy_read_timeout            600s;
        proxy_ignore_headers          Set-Cookie;
        proxy_set_header              x-username $remote_user;
        proxy_set_header              remote-user $remote_user;       
    }

    location /test/bonito/run.cgi {
        auth_basic                    "noske-corpsum";
        auth_basic_user_file          "/etc/nginx/auth";
        proxy_pass                    "${PROXY_FOR}/../test/bonito/run.cgi";
        add_header                    X-Cache-Status    $upstream_cache_status;
        proxy_cache                   ts_cache;
        proxy_cache_valid             200 302 1y;
        proxy_cache_valid             404 1m;
        proxy_cache_methods           GET HEAD POST;
        proxy_ignore_headers          Cache-Control;
        proxy_cache_background_update on;
        proxy_cache_lock              on;
        proxy_cache_key               "$remote_user$scheme$proxy_host$uri$is_args$args$request_body";
        proxy_read_timeout            600s;
        proxy_ignore_headers          Set-Cookie;
        proxy_set_header              x-username $remote_user;
        proxy_set_header              remote-user $remote_user;      
    }

    location /crystal {
        auth_basic                    "noske-corpsum";
        auth_basic_user_file          "/etc/nginx/auth";
        proxy_pass                    "${PROXY_FOR}/../crystal";
        add_header                    X-Cache-Status    $upstream_cache_status;
        proxy_cache                   ts_cache;
        proxy_cache_valid             200 302 1y;
        proxy_cache_valid             404 1m;
        proxy_cache_methods           GET HEAD POST;
        proxy_ignore_headers          Cache-Control;
        proxy_cache_background_update on;
        proxy_cache_lock              on;
        proxy_cache_key               "$remote_user$scheme$proxy_host$uri$is_args$args$request_body";
        proxy_read_timeout            600s;
        proxy_ignore_headers          Set-Cookie;
        proxy_set_header              x-username $remote_user;
        proxy_set_header              remote-user $remote_user;        
    }

    gzip on;
    gzip_static on;
    gzip_types text/plain text/css application/json application/x-javascript text/xml application/xml application/xml+rss text/javascript;
    gzip_proxied  any;
    gzip_vary on;
    gzip_comp_level 6;
    gzip_buffers 16 8k;
    gzip_http_version 1.1;

}

